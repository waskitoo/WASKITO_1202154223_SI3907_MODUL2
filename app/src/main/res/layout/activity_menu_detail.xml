<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    tools:context="com.razerblade.waskito_1202154223_modul2.MenuDetail">

    <ImageView
        android:id="@+id/lblDetailGambar"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:src="@drawable/hik_go_kucing"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/lblDetailNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Kucing"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/lblDetailHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rp. 1500"
        android:textSize="22dp"
        android:textStyle="normal"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi"
        android:textSize="18dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lblDetailDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daging Kucing"
        android:textSize="16dp"
        android:textStyle="normal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>
</LinearLayout>

